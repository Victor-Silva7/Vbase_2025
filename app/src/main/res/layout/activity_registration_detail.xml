<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Image Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <!-- Main image with pager for multiple images -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Gradient overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_overlay" />

            <!-- Back button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|start"
                android:layout_margin="16dp"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/circle_background_green"
                android:contentDescription="@string/back_button" />

            <!-- Share button -->
            <ImageButton
                android:id="@+id/btnShareDetail"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:src="@drawable/ic_share_24dp"
                android:background="@drawable/circle_background_green"
                android:contentDescription="@string/share_registration" />

            <!-- Image indicator -->
            <LinearLayout
                android:id="@+id/layoutImageIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:visibility="gone" />

            <!-- Category badge -->
            <LinearLayout
                android:id="@+id/layoutDetailCategoryBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:background="@drawable/category_badge_background"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivDetailCategoryIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_saudavel_24dp"
                    android:layout_marginEnd="6dp"
                    android:contentDescription="@string/category_icon" />

                <TextView
                    android:id="@+id/tvDetailCategoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/healthy"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </FrameLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDetailName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rosa do Jardim Principal"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        tools:text="Rosa do Jardim Principal" />

                    <TextView
                        android:id="@+id/tvDetailScientificName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rosa damascena"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"
                        tools:text="Rosa damascena" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivDetailTypeIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_planta_24dp"
                    android:layout_marginStart="12dp"
                    android:contentDescription="@string/registration_type" />

            </LinearLayout>

            <!-- Info Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- Location Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location_24dp"
                            android:layout_marginBottom="4dp"
                            android:contentDescription="@string/location_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/location"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvDetailLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jardim Principal"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            tools:text="Jardim Principal" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Date Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            android:layout_marginBottom="4dp"
                            android:contentDescription="@string/date_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/registration_date"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvDetailDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15/10/2024"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="2dp"
                            tools:text="15/10/2024" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Observations Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardObservations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/observations"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvDetailObservations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Observações detalhadas sobre o registro..."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:lineSpacingExtra="4dp"
                        tools:text="Planta em excelente estado de saúde. Flores estão desabrochando perfeitamente e as folhas apresentam coloração vibrante." />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/edit"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_edit_24dp"
                    style="@style/Widget.Material3.Button.UnelevatedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeleteDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/delete"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_delete_24dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:textColor="@color/error_color"
                    app:iconTint="@color/error_color"
                    app:strokeColor="@color/error_color" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>