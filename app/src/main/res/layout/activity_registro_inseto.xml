<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:id="@+id/scroll_root"
    android:descendantFocusability="afterDescendants"
    android:isScrollContainer="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/icon_insect_header"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_inseto_24dp"
            android:tint="#029e5a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nome Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_nome"
            style="@style/VGroupEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Nome do Inseto"
            app:boxStrokeColor="#029e5a"
            app:hintTextColor="#1a1a1a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_insect_header">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:textColor="#1a1a1a"
                android:textColorHint="#1a1a1a"
                android:maxLength="50" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Data Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_data"
            style="@style/VGroupEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data do Registro"
            app:boxStrokeColor="#029e5a"
            app:hintTextColor="#1a1a1a"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_calendar"
            app:endIconTint="#029e5a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_layout_nome">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:textColor="#1a1a1a"
                android:textColorHint="#1a1a1a" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Local Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_local"
            style="@style/VGroupEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Local (Cidade)"
            app:boxStrokeColor="#029e5a"
            app:hintTextColor="#1a1a1a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_layout_data">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:textColor="#1a1a1a"
                android:textColorHint="#1a1a1a"
                android:maxLength="30" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Imagens Section -->
        <LinearLayout
            android:id="@+id/layout_images_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_layout_local">
            
            <TextView
                android:id="@+id/text_imagens_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Inserir Imagens"
                android:textColor="#029e5a"
                android:textSize="18sp"
                android:textStyle="bold" />
                
            <TextView
                android:id="@+id/text_image_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/5"
                android:textColor="#1a1a1a"
                android:textSize="14sp"
                android:background="@drawable/counter_background"
                android:padding="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_image_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_images_header">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_camera"
                style="@style/VGroupButton.Outline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Câmera"
                app:icon="@drawable/ic_camera_24dp"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_galeria"
                style="@style/VGroupButton.Outline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Galeria"
                app:icon="@drawable/ic_galeria_24dp"
                app:iconGravity="textStart" />
        </LinearLayout>

        <!-- Selected Images RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_image_buttons"
            tools:visibility="visible"
            tools:listitem="@layout/item_selected_image" />

        <!-- Categoria Section -->
        <TextView
            android:id="@+id/text_categoria_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Categoria"
            android:textColor="#029e5a"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_view_images" />
            
        <TextView
            android:id="@+id/text_categoria_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/category_tooltip_hint"
            android:textColor="#1a1a1a"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_categoria_title" />

        <LinearLayout
            android:id="@+id/layout_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_categoria_subtitle">

            <!-- Benéfico -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_benefico"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/transparent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/icon_benefico"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_benefico_24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/ripple_circle_green"
                        android:padding="4dp" />
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="ℹ️"
                        android:textSize="8sp"
                        android:alpha="0.7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Benéfico"
                        android:textColor="#1a1a1a"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Neutro -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_neutro"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/transparent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/icon_neutro"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_neutro_24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/ripple_circle_green"
                        android:padding="4dp" />
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="ℹ️"
                        android:textSize="8sp"
                        android:alpha="0.7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Neutro"
                        android:textColor="#1a1a1a"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Praga -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_praga"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/transparent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/icon_praga"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_praga_24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/ripple_circle_green"
                        android:padding="4dp" />
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="ℹ️"
                        android:textSize="8sp"
                        android:alpha="0.7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Praga"
                        android:textColor="#1a1a1a"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Observação Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_observacao"
            style="@style/VGroupEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="Observação"
            app:boxStrokeColor="#029e5a"
            app:hintTextColor="#1a1a1a"
            app:counterEnabled="true"
            app:counterMaxLength="300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_categoria">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_observacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textMultiLine"
                android:lines="4"
                android:maxLines="6"
                android:minLines="4"
                android:imeOptions="actionDone"
                android:scrollbars="vertical"
                android:textColor="#1a1a1a"
                android:textColorHint="#1a1a1a"
                android:maxLength="300"
                android:gravity="top" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Salvar Button -->
        <Button
            android:id="@+id/button_salvar"
            style="@style/VGroupButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="Salvar Registro"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_layout_observacao" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>