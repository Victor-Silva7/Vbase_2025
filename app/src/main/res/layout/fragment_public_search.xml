<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    tools:context=".ui.search.PublicSearchFragment">

    <!-- Barra de Busca -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary_green"
        android:elevation="4dp"
        android:paddingBottom="8dp">

        <!-- Campo de busca principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search_24dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/search_all_hint" />

            <EditText
                android:id="@+id/etSearchPublic"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="@string/search_all_hint"
                android:background="@null"
                android:textSize="16sp"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:paddingHorizontal="8dp" />

            <ImageView
                android:id="@+id/ivClearSearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Limpar busca" />

        </LinearLayout>

        <!-- Filtros rápidos -->
        <HorizontalScrollView
            android:id="@+id/scrollViewFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:scrollbars="none"
            android:visibility="gone">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupQuickFilters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:chipSpacingHorizontal="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAllTypes"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_types"
                    android:textColor="@android:color/white"
                    android:checked="true"
                    app:chipBackgroundColor="@color/primary_green_light"
                    app:chipStrokeColor="@android:color/white"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPlantsOnly"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_plant"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="@color/healthy_color"
                    app:chipStrokeColor="@android:color/white"
                    app:chipStrokeWidth="1dp"
                    app:chipIcon="@drawable/ic_planta_24dp"
                    app:chipIconSize="16dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipInsectsOnly"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_insect"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="@color/beneficial_color"
                    app:chipStrokeColor="@android:color/white"
                    app:chipStrokeWidth="1dp"
                    app:chipIcon="@drawable/ic_inseto_24dp"
                    app:chipIconSize="16dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipUsersOnly"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuários"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="@color/info_color"
                    app:chipStrokeColor="@android:color/white"
                    app:chipStrokeWidth="1dp"
                    app:chipIcon="@drawable/ic_user_placeholder"
                    app:chipIconSize="16dp" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

    </LinearLayout>

    <!-- Conteúdo principal com estados -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Estado Inicial - Buscas recentes e populares -->
        <ScrollView
            android:id="@+id/layoutInitialState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Buscas Recentes -->
                <LinearLayout
                    android:id="@+id/layoutRecentSearches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/recent_searches"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tvClearHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/clear_search_history"
                            android:textSize="14sp"
                            android:textColor="@color/primary_green"
                            android:background="?attr/selectableItemBackground"
                            android:padding="8dp" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerRecentSearches"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:listitem="@layout/item_search_suggestion" />

                </LinearLayout>

                <!-- Buscas Populares -->
                <LinearLayout
                    android:id="@+id/layoutPopularSearches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/popular_searches"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerPopularSearches"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:listitem="@layout/item_search_suggestion" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Sugestões em tempo real -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSuggestions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:visibility="gone"
            tools:listitem="@layout/item_search_suggestion" />

        <!-- Resultados da busca -->
        <LinearLayout
            android:id="@+id/layoutSearchResults"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Header dos resultados -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvResultsCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/results_count"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    tools:text="42 resultados encontrados" />

                <ImageView
                    android:id="@+id/ivAdvancedFilters"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_filter_list_24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Filtros avançados" />

                <ImageView
                    android:id="@+id/ivSortOptions"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_sort_24dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Opções de ordenação" />

            </LinearLayout>

            <!-- Lista de resultados -->
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshResults"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerSearchResults"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:padding="8dp"
                    tools:listitem="@layout/item_search_result" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </LinearLayout>

        <!-- Estado sem resultados -->
        <LinearLayout
            android:id="@+id/layoutNoResults"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="32dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_search_off_24dp"
                android:alpha="0.3"
                android:contentDescription="@string/search_no_results" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_no_results"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="16dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_no_results_message"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClearFilters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear_filters"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                app:backgroundTint="@color/primary_green" />

        </LinearLayout>

        <!-- Loading -->
        <LinearLayout
            android:id="@+id/layoutLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="32dp">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_loading"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center" />

        </LinearLayout>

        <!-- Estado de erro -->
        <LinearLayout
            android:id="@+id/layoutError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="32dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_error_24dp"
                android:alpha="0.3"
                android:contentDescription="Erro na busca" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erro na busca"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="16dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifique sua conexão e tente novamente"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="8dp"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetrySearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tentar novamente"
                android:layout_marginTop="24dp"
                app:backgroundTint="@color/primary_green" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>