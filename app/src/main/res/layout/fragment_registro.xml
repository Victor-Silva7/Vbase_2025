<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:scrollbars="none"
    tools:context=".ui.registro.RegistroFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/text_registro_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meus Registros"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#029e5a"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Descrição -->
        <TextView
            android:id="@+id/text_registro_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registre suas descobertas!"
            android:textSize="14sp"
            android:textColor="#999999"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Card Registrar Planta -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_registro_planta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#262626"
                app:strokeWidth="1dp"
                app:strokeColor="#333333">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_add_plant"
                        android:tint="#029e5a"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Ícone Planta" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registrar Planta"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Adicione uma nova planta"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/buttonRegistroPlanta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:background="@android:color/transparent" />

        </FrameLayout>

        <!-- Card Registrar Inseto -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_registro_inseto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#262626"
                app:strokeWidth="1dp"
                app:strokeColor="#333333">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_inseto_24dp"
                        android:tint="#029e5a"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Ícone Inseto" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registrar Inseto"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Adicione um novo inseto"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/buttonRegistroInseto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:background="@android:color/transparent" />

        </FrameLayout>

        <!-- Card Seus Registros -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_seus_registros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#262626"
                app:strokeWidth="1dp"
                app:strokeColor="#333333">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_user_placeholder"
                        android:tint="#029e5a"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Ícone Registros" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seus Registros"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Visualize seus registros"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/buttonSeusRegistros"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:background="@android:color/transparent" />

        </FrameLayout>

    </LinearLayout>

</ScrollView>