<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header do Post com informações do usuário -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Avatar do usuário -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivUserAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_user_placeholder"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/primary_green" />

            <!-- Informações do usuário -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nome do Usuário"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        tools:text="João Silva" />

                    <!-- Selo de verificação -->
                    <ImageView
                        android:id="@+id/ivVerifiedBadge"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_verified_24dp"
                        android:layout_marginStart="4dp"
                        android:visibility="gone"
                        android:contentDescription="@string/verified_user" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvPostTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="há 2 horas"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    tools:text="há 2 horas" />

            </LinearLayout>

            <!-- Badge da categoria -->
            <LinearLayout
                android:id="@+id/layoutCategoryBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_badge_background"
                android:orientation="horizontal"
                android:padding="6dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivCategoryIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_planta_24dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="Ícone da categoria" />

                <TextView
                    android:id="@+id/tvCategoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Planta"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <!-- Menu de opções -->
            <ImageView
                android:id="@+id/ivPostMenu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more_vert_24dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Opções do post" />

        </LinearLayout>

        <!-- Título e descrição do post -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvPostTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título da Postagem"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Rosa Vermelha no Jardim" />

            <TextView
                android:id="@+id/tvPostDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição da postagem aqui..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                tools:text="Encontrei esta linda rosa vermelha em meu jardim. Está florescendo perfeitamente nesta época do ano!" />

        </LinearLayout>

        <!-- Container de Imagens -->
        <FrameLayout
            android:id="@+id/frameImageContainer"
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <!-- Imagem principal do post -->
            <ImageView
                android:id="@+id/ivPostImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_placeholder"
                android:contentDescription="Imagem da postagem" />

            <!-- Gradiente no final para melhor legibilidade -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_overlay" />

            <!-- Indicador de múltiplas imagens -->
            <LinearLayout
                android:id="@+id/layoutImageCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="12dp"
                android:background="@drawable/image_count_background"
                android:orientation="horizontal"
                android:padding="6dp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_image_multiple"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="Múltiplas imagens" />

                <TextView
                    android:id="@+id/tvImageCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <!-- Localização -->
            <LinearLayout
                android:id="@+id/layoutLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="12dp"
                android:background="@drawable/location_background"
                android:orientation="horizontal"
                android:padding="6dp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_location_24dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="Localização" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jardim Botânico"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

        </FrameLayout>

        <!-- Tags e informações científicas -->
        <LinearLayout
            android:id="@+id/layoutScientificInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvScientificName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rosa damascena"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/text_secondary"
                tools:text="Rosa damascena" />

        </LinearLayout>

        <!-- Botões de interação -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical">

            <!-- Botão Curtir -->
            <LinearLayout
                android:id="@+id/layoutLikeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivLikeIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_favorite_border_24dp"
                    android:layout_marginEnd="6dp"
                    android:contentDescription="@string/like_post" />

                <TextView
                    android:id="@+id/tvLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    tools:text="23" />

            </LinearLayout>

            <!-- Botão Comentar -->
            <LinearLayout
                android:id="@+id/layoutCommentButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivCommentIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_comment_24dp"
                    android:layout_marginEnd="6dp"
                    android:contentDescription="@string/comment_post" />

                <TextView
                    android:id="@+id/tvCommentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    tools:text="5" />

            </LinearLayout>

            <!-- Botão Compartilhar -->
            <LinearLayout
                android:id="@+id/layoutShareButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivShareIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_share_24dp"
                    android:layout_marginEnd="6dp"
                    android:contentDescription="@string/share_post" />

                <TextView
                    android:id="@+id/tvShareCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    tools:text="2" />

            </LinearLayout>

            <!-- Botão Salvar -->
            <ImageView
                android:id="@+id/ivSaveButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bookmark_border_24dp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/save_post" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>