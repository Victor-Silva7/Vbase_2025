<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header do Card com informações do usuário -->
        <RelativeLayout
            android:id="@+id/layoutUserHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Avatar do usuário -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewUserAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircularImageView"
                app:strokeColor="@color/divider"
                app:strokeWidth="1dp"
                tools:src="@drawable/ic_person_24dp" />

            <!-- Informações do usuário -->
            <LinearLayout
                android:id="@+id/layoutUserInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/layoutPostMeta"
                android:layout_toEndOf="@+id/imageViewUserAvatar"
                android:orientation="vertical">

                <!-- Nome do usuário com verificação -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Maria Silva" />

                    <ImageView
                        android:id="@+id/imageViewVerified"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_verified_24dp"
                        android:visibility="gone"
                        app:tint="@color/primary_green"
                        tools:visibility="visible" />

                </LinearLayout>

                <!-- Nível do usuário e localização -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewUserLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_green"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="Especialista" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginHorizontal="6dp"
                        android:background="@drawable/ic_verified_24dp"
                        app:tint="@color/text_hint" />

                    <TextView
                        android:id="@+id/textViewUserLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        tools:text="São Paulo, SP" />

                </LinearLayout>

            </LinearLayout>

            <!-- Meta informações da postagem -->
            <LinearLayout
                android:id="@+id/layoutPostMeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="end|center_vertical"
                android:orientation="vertical">

                <!-- Tempo da postagem -->
                <TextView
                    android:id="@+id/textViewPostTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp"
                    tools:text="2h" />

                <!-- Ícone do tipo de postagem -->
                <ImageView
                    android:id="@+id/imageViewPostType"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    tools:src="@drawable/ic_planta_24dp"
                    app:tint="@color/primary_green" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Conteúdo da postagem -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Título da postagem -->
            <TextView
                android:id="@+id/textViewPostTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp"
                tools:text="Rosa do meu jardim floresceu!" />

            <!-- Descrição da postagem -->
            <TextView
                android:id="@+id/textViewPostDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:maxLines="3"
                android:ellipsize="end"
                tools:text="Depois de 3 meses cuidando com muito carinho, minha rosa finalmente deu sua primeira florada. As pétalas estão com uma cor incrível!" />

        </LinearLayout>

        <!-- Imagem da postagem -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewPostPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImageView"
            tools:src="@drawable/ic_planta_24dp" />

        <!-- Informações específicas (planta ou inseto) -->
        <LinearLayout
            android:id="@+id/layoutSpecificInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Chips com informações -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacingHorizontal="8dp"
                app:singleLine="false">

                <!-- Nome científico -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipScientificName"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:chipIconTint="@color/text_secondary"
                    tools:text="Rosa gallica" />

                <!-- Família -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFamily"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="Rosaceae" />

                <!-- Status/Tipo -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipStatus"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="Floração" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Localização da postagem -->
            <LinearLayout
                android:id="@+id/layoutPostLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location_on_24dp"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:id="@+id/textViewPostLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    tools:text="Jardim Botânico - SP" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/divider" />

        <!-- Footer com interações -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Estatísticas de interação -->
            <TextView
                android:id="@+id/textViewInteractionStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginBottom="12dp"
                tools:text="23 curtidas • 5 comentários • 2 compartilhamentos" />

            <!-- Botões de ação -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Botão curtir -->
                <LinearLayout
                    android:id="@+id/buttonLike"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageViewLike"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_favorite_border_24dp"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Curtir"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Botão comentar -->
                <LinearLayout
                    android:id="@+id/buttonComment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_comment_24dp"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Comentar"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Botão compartilhar -->
                <LinearLayout
                    android:id="@+id/buttonShare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_share_24dp"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Compartilhar"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Botão salvar -->
                <LinearLayout
                    android:id="@+id/buttonBookmark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageViewBookmark"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_bookmark_border_24dp"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewBookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Salvar"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>