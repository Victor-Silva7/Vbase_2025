<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header do usuário -->
        <LinearLayout
            android:id="@+id/layoutUserHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <!-- Avatar do usuário -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewUserAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircularImageView"
                app:strokeColor="@color/divider"
                app:strokeWidth="1dp"
                tools:src="@drawable/ic_person_24dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Nome do usuário e verificação -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textViewUserName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="Maria Silva" />

                    <!-- Selo de verificação -->
                    <ImageView
                        android:id="@+id/imageViewVerified"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_verified_24dp"
                        android:visibility="gone"
                        app:tint="@color/primary_green"
                        tools:visibility="visible" />

                </LinearLayout>

                <!-- Nível do usuário e localização -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp">

                    <!-- Nível do usuário -->
                    <TextView
                        android:id="@+id/textViewUserLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_green"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:text="Especialista"
                        tools:ignore="SmallSp" />

                    <!-- Localização do usuário -->
                    <TextView
                        android:id="@+id/textViewUserLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/text_hint"
                        android:textSize="10sp"
                        tools:text="Curitiba, PR"
                        tools:ignore="SmallSp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Conteúdo da postagem -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp">

            <!-- Tempo da postagem e tipo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!-- Tempo da postagem -->
                <TextView
                    android:id="@+id/textViewPostTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp"
                    tools:text="2h" />

                <!-- Tipo de postagem -->
                <ImageView
                    android:id="@+id/imageViewPostType"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_planta_24dp"
                    app:tint="@color/healthy_color" />

            </LinearLayout>

            <!-- Título da postagem -->
            <TextView
                android:id="@+id/textViewPostTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                tools:text="Minha nova planta" />

            <!-- Descrição da postagem -->
            <TextView
                android:id="@+id/textViewPostDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:maxLines="3"
                android:ellipsize="end"
                tools:text="Esta é uma descrição da minha nova planta. Ela está crescendo muito bem e já está com 30cm de altura." />

            <!-- Imagem da postagem -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewPostPhoto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:shapeAppearanceOverlay="@style/RoundedImageView"
                app:strokeColor="@color/divider"
                app:strokeWidth="1dp"
                tools:src="@drawable/ic_planta_24dp"
                tools:visibility="visible" />

            <!-- Localização da postagem -->
            <LinearLayout
                android:id="@+id/layoutPostLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location_24dp"
                    app:tint="@color/text_hint" />

                <TextView
                    android:id="@+id/textViewPostLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp"
                    tools:text="Jardim Botânico, Curitiba, PR" />

            </LinearLayout>

            <!-- Informações específicas (chips) -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleLine="false"
                app:chipSpacingHorizontal="4dp"
                app:chipSpacingVertical="4dp" />

        </LinearLayout>

        <!-- Estatísticas e ações -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Estatísticas de interação -->
            <TextView
                android:id="@+id/textViewInteractionStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_hint"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                tools:text="23 curtidas • 5 comentários • 2 compartilhamentos" />

            <!-- Botões de ação -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Botão curtir -->
                <LinearLayout
                    android:id="@+id/buttonLike"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageViewLike"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_favorite_border_24dp"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Curtir"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Botão comentar -->
                <LinearLayout
                    android:id="@+id/buttonComment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_comment_24dp"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Comentar"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Botão compartilhar -->
                <LinearLayout
                    android:id="@+id/buttonShare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_share_24dp"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Compartilhar"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Botão salvar -->
                <LinearLayout
                    android:id="@+id/buttonBookmark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageViewBookmark"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_bookmark_border_24dp"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewBookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Salvar"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>