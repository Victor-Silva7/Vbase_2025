<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ivSuggestionIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_search_24dp"
        android:layout_marginEnd="12dp"
        android:alpha="0.6"
        android:contentDescription="Ícone de busca" />

    <TextView
        android:id="@+id/tvSuggestionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Rosa vermelha"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Rosa vermelha do jardim" />

    <ImageView
        android:id="@+id/ivInsertSuggestion"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_north_west_24dp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:alpha="0.4"
        android:contentDescription="Inserir sugestão" />

</LinearLayout>