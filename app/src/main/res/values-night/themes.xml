<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidAppTemplate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/vgroup_green</item>
        <item name="colorPrimaryVariant">@color/vgroup_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/vgroup_green</item>
        <item name="colorSecondaryVariant">@color/vgroup_green_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background colors (enhanced for night mode) -->
        <item name="android:colorBackground">@color/vgroup_dark_gray</item>
        <item name="colorSurface">@color/vgroup_gray_light</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/vgroup_dark_gray</item>
        <item name="android:navigationBarColor">@color/vgroup_dark_gray</item>
        <!-- Additional V Group customizations for night mode -->
        <item name="colorError">#ff5722</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/vgroup_text_secondary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>