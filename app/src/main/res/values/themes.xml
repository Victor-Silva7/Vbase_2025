<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidAppTemplate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/vgroup_green</item>
        <item name="colorPrimaryVariant">@color/vgroup_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/vgroup_green</item>
        <item name="colorSecondaryVariant">@color/vgroup_green_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/vgroup_dark_gray</item>
        <item name="colorSurface">@color/vgroup_gray_light</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/vgroup_dark_gray</item>
        <item name="android:navigationBarColor">@color/vgroup_dark_gray</item>
        <!-- Additional V Group customizations -->
        <item name="colorError">#ff5722</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/vgroup_text_secondary</item>
        <!-- Customize your theme here. -->
    </style>
    
    <!-- V Group Button Styles -->
    <style name="VGroupButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/vgroup_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>
    
    <style name="VGroupButton.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/vgroup_green</item>
        <item name="android:textColor">@color/vgroup_green</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <!-- V Group EditText Style -->
    <style name="VGroupEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/vgroup_green</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/vgroup_text_secondary</item>
        <item name="android:textColorHint">@color/vgroup_text_secondary</item>
    </style>
    
    <!-- V Group Card Style -->
    <style name="VGroupCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/vgroup_gray_light</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources>